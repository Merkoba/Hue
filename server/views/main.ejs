<% include doctype.ejs %>

<html>

	<head>

		<% include meta.ejs %>

		<title><%= vars.default_title %></title>

		<link rel="stylesheet" href="/static/css/libs/bundle.min.css?version=2">
		<link rel="stylesheet" href="/static/css/main/style.css?version=627"/>
		
		<script src="/static/js/libs/bundle.min.js?version=5"></script>
		<script src="/static/js/main/bundle.min.js?version=12"></script>

		<script>

			<% include vars_main.ejs %>

			$(function()
			{
				Hue.init()
			})

		</script>

	</head>

	<body>

		<div id="loading">
			<div id="loading_spinner"></div>
		</div>

		<div id="main_container" class='bg0'>

			<div id='background_image' class='background_image'></div>

			<div class="columns_container">

				<div id='activity_bar_container' class='unselectable'>
					<div id='activity_bar_content'>
						<div id='activity_bar_no_activity'>No Recent Activity</div>
					</div>
				</div>

				<div id='header' class='unselectable bg2 panel'>
					<div id='header_items'>
						<div id='header_items_inner'>
							<div id='main_menu_icon' class='pointer nicetitle action' onclick='Hue.show_main_menu()' title="Main Menu">
								<div class='action pointer'><i class='icon fa fa-th-large'></i></div>
							</div>

							<div class='pointer action' id='usercount' onclick='Hue.show_userlist()'></div>

							<div id='header_radio'>
								<div class='pointer action' id='toggle_radio_state' onclick='Hue.toggle_play_radio()'>
									<div class='action pointer' id='header_radio_playing_icon'><i class='icon fa fa-volume-up'></i></div>
									<div id='toggle_now_playing_text'>Start Radio</div>
								</div>

								<div id='header_radio_volume_area'>
									<div id='header_radio_volume_controls'>
										<div id='header_radio_volume_icon_minus' class='action pointer' onclick='Hue.radio_volume_decrease()'><i class='pointer icon fa fa-minus'></i></div>
										<div class='pointer action' onclick='Hue.radio_volume_decrease()'>Volume:&nbsp;</div>
										<div class='pointer action' id='volume' onclick='Hue.radio_volume_increase()'>100%</div>
										<div id='header_radio_volume_icon_plus' class='action pointer' onclick='Hue.radio_volume_increase()'><i class='pointer icon fa fa-plus'></i></div>
									</div>
								</div>

								<div id='header_now_playing_area'>
									<div id='header_now_playing_controls' class='action' onclick='Hue.show_played()'>
										<div class='pointer'>Now Playing:&nbsp;</div>
										<div class='pointer' id='now_playing'>Loading</div>
									</div>
								</div>
							</div>

							<div id='header_topic'>
								<div id='header_topic_inner' class='action' onclick='Hue.show_status()'>
									<div class='header_item'>Topic:&nbsp;</div>
									<div class='header_item' id='header_topic_text'></div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class='unselectable' id='reactions_box_container'>
					<div id='reactions_box'>
						<div>
							<i class='reaction_icon fa fa-thumbs-o-up pointer action nicetitle' onclick='Hue.send_reaction("like")' title="Like"></i>
							<i class='reaction_icon fa fa-heart-o pointer action nicetitle' onclick='Hue.send_reaction("love")' title="Love"></i>
							<i class='reaction_icon fa fa-smile-o pointer action nicetitle' onclick='Hue.send_reaction("happy")' title="Happy"></i>
						</div>

						<div>
							<i class='reaction_icon fa fa-thumbs-o-down pointer action nicetitle' onclick='Hue.send_reaction("dislike")' title="Dislike"></i>
							<i class='reaction_icon fa fa-meh-o pointer action nicetitle' onclick='Hue.send_reaction("meh")' title="Meh"></i>
							<i class='reaction_icon fa fa-frown-o pointer action nicetitle' onclick='Hue.send_reaction("sad")' title="Sad"></i>
						</div>

						<div class='pointer action user_function_button' id='user_function_button_1'>F1</div>
						<div class='pointer action user_function_button' id='user_function_button_2'>F2</div>
						<div class='pointer action user_function_button' id='user_function_button_3'>F3</div>
						<div class='pointer action user_function_button' id='user_function_button_4'>F4</div>
						<div class='pointer action user_function_button' id='user_function_button_5'>F5</div>
						<div class='pointer action user_function_button' id='user_function_button_6'>F6</div>
						<div class='pointer action user_function_button' id='user_function_button_7'>F7</div>
						<div class='pointer action user_function_button' id='user_function_button_8'>F8</div>
					</div>
				</div>

				<div class='unselectable action nicetitle pointer topbox_container position_left' onclick='Hue.toggle_activity_bar()' title="Toggle Activity Bar">
					<div class='topbox'>
						<i id='topbox_left_icon' class='topbox_icon fa fa-caret-down'></i>
					</div>
				</div>

				<div class='unselectable action nicetitle pointer topbox_container position_right' onclick='Hue.lock_screen()' title="Lock Screen">
					<div class='topbox'>
						<i id='topbox_right_icon' class='topbox_icon fa fa-lock'></i>
					</div>
				</div>

				<div id='synth_container' class='unselectable'>
					<div id='synth_content_container'>
						<div id='synth_content'>
							<div class='synth_key_button action' id='synth_key_button_volume'><i id='synth_volume_icon' class='fa fa-volume-up'></i></div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_1'>1</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_2'>2</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_3'>3</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_4'>4</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_5'>5</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_6'>6</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_7'>7</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_8'>8</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_9'>9</div>
							<div class='synth_key_divider'></div>
							<div class='synth_key action' id='synth_key_10'>10</div>
						</div>

						<div id='synth_voice_content'>
							<input type='text' id='synth_voice_input' placeholder="Say Something">
						</div>
					</div>
				</div>

				<div id='recent_voice_box' class='unselectable'>
					<div id='recent_voice_box_content'></div>
				</div>

				<div class='rows_container' id="main_rows_container">

					<div id='infotip_container' class='unselectable'>
						<div id='infotip'>hi</div>
					</div>

					<div id='chat_main' class='bg1'>

						<div class='scroller_container top_scroller_container' id='top_scroller_container'>
							<div id='top_scroller' class='left_scroller scroller action3 unselectable' onclick='Hue.goto_top()'>Go&nbsp;To&nbsp;Top</div>
							<div class='center_scroller scroller action3 unselectable' onclick='Hue.autoscroll_up()'>Scroll</div>
							<div id='up_scroller' class='right_scroller scroller action3 unselectable' onclick='Hue.activity_above()'>Your&nbsp;Activity</div>
						</div>

						<div class='maxer_container2'>
							<div id='chat_maxer' class='maxer'></div>
						</div>

						<div id='chat_area_parent'>
							<div id='chat_area' class='chat_area'></div>
						</div>

						<div class='scroller_container bottom_scroller_container' id='bottom_scroller_container'>
							<div id='bottom_scroller' class='left_scroller scroller action3 unselectable' onclick='Hue.goto_bottom(true)'>Go&nbsp;To&nbsp;Bottom</div>
							<div class='center_scroller scroller action3 unselectable' onclick='Hue.autoscroll_down()'>Scroll</div>
							<div id='down_scroller' class='right_scroller scroller action3 unselectable' onclick='Hue.activity_below()'>Your&nbsp;Activity</div>
						</div>

					</div>

					<div id='media' class='unselectable bg1' draggable='false'>

						<div id='media_split'>

							<div class='media_main_container' id='media_image'>

								<div class='media_container' id='media_image_container'>

									<img id='media_image_frame' class='pointer' draggable='false' onclick="Hue.show_current_image_modal()" crossOrigin="Anonymous">
									<div id='media_image_error' class='pointer' onclick="Hue.show_current_image_modal()">Image failed to load</div>

								</div>

								<div class='maxer_container'>
									<div id='media_image_maxer' class='maxer'></div>
								</div>

							</div>

							<div class='media_main_container' id='media_tv'>

								<div id='media_youtube_video_container' class='media_container'></div>
								<div id='media_twitch_video_container' class='media_container'></div>
								<div id='media_soundcloud_video_container' class='media_container'></div>
								<div id='media_vimeo_video_container' class='media_container'></div>
								<div id='media_video_video_container' class='media_container'></div>
								<div id='media_iframe_video_container' class='media_container'></div>

								<div class='maxer_container'>
									<div id='media_tv_maxer' class='maxer'></div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div id='footer' class='bg2 panel'>
					<div id='footer_items'>

						<div id='footer_user_menu_container' class='pointer action' onclick="Hue.show_user_menu()">
							<i id='footer_user_menu' class='fa fa-user-circle footer_icon'></i>
						</div>

						<textarea id='input' size="1" rows="1"></textarea>

						<div id='footer_media_items' class='unselectable'>

							<div id='footer_images_controls' class='footer_media_control'>
								<div id="footer_images_label" class='footer_media_label footer_text_small action pointer nicetitle' title='Click or Right Click' onclick='Hue.show_media_history("image")' data-type="images">Images</div>

								<div  id='footer_images_icon_container' class='pointer action nicetitle footer_icon2' onclick='Hue.show_image_picker()' title="Change the Image">
									<i id='footer_images_icon' class='fa fa-camera'></i>
								</div>

								<div class='pointer action nicetitle footer_icon2' onclick='Hue.toggle_images()' title='Show/Hide Images. Hidden means it will not be displayed or active'>
									<i id='footer_toggle_images_icon' class='fa fa-toggle-on'></i>
								</div>

								<div id='footer_lock_images_icon_container' class='pointer action nicetitle footer_icon3' onclick='Hue.toggle_lock_images()' onauxclick="Hue.media_lock_valve('images', event)" title='Lock/Unlock Images. Locked means it will stay the same even if media is changed by a user'>
									<i id='footer_lock_images_icon' class='fa fa-unlock-alt'></i>
								</div>
							</div>

							<div id='footer_tv_controls' class='footer_media_control'>
								<div id="footer_tv_label" class='footer_media_label footer_text_small action pointer nicetitle' title='Click or Right Click' onclick='Hue.show_media_history("tv")' data-type="tv">TV</div>

								<div id='footer_tv_icon_container' class='pointer action nicetitle footer_icon2' onclick='Hue.show_tv_picker()' title="Change the TV">
									<i id='footer_tv_icon' class='fa fa-television'></i>
								</div>

								<div class='pointer action nicetitle footer_icon2' onclick='Hue.toggle_tv()' title="Show/Hide TV. Hidden means it will not be displayed or active">
									<i class='fa fa-toggle-on' id='footer_toggle_tv_icon'></i>
								</div>

								<div id='footer_lock_tv_icon_container' class='pointer action nicetitle footer_icon3' onclick='Hue.toggle_lock_tv()' onauxclick="Hue.media_lock_valve('tv', event)" title="Lock/Unlock TV. Locked means it will stay the same even if media is changed by a user">
									<i class='fa fa-unlock-alt' id='footer_lock_tv_icon'></i>
								</div>
							</div>

							<div id='footer_radio_controls' class='footer_media_control'>
								<div id="footer_radio_label" class='footer_media_label footer_text_small action pointer nicetitle' title='Click or Right Click' onclick='Hue.show_media_history("radio")' data-type="radio">Radio</div>

								<div id='footer_radio_icon_container' class='pointer action nicetitle footer_icon2' onclick='Hue.show_radio_picker()' title="Change the Radio">
									<i id='footer_radio_icon' class='fa fa-volume-up'></i>
								</div>

								<div class='pointer action nicetitle footer_icon2' onclick='Hue.toggle_radio()' title="Show/Hide Radio. Hidden means it will not be displayed or active">
									<i class='fa fa-toggle-on' id='footer_toggle_radio_icon'></i>
								</div>

								<div id='footer_lock_radio_icon_container' class='pointer action nicetitle footer_icon3' onclick='Hue.toggle_lock_radio()' onauxclick="Hue.media_lock_valve('radio', event)" title="Lock/Unlock Radio. Locked means it will stay the same even if media is changed by a user">
									<i class='fa fa-unlock-alt' id='footer_lock_radio_icon'></i>
								</div>
							</div>

							<div class='pointer action' onclick='Hue.show_media_menu()'>
								<i id='footer_media_menu' class='fa fa-bars' id='footer_lock_images_icon'></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<audio id='audio_pup' src='/static/audio/pup.mp3?version=1' preload="auto"></audio>
		<audio id='audio_pup2' src='/static/audio/pup2.mp3?version=1' preload="auto"></audio>
		<audio id='audio_join' src='/static/audio/join.mp3?version=2' preload="auto"></audio>
		<audio id='audio_highlight' src='/static/audio/highlight.mp3?version=1' preload="auto"></audio>

		<div id='media_radio'>
			<div id='media_youtube_audio_container' class='media_radio_item'></div>
			<div id='media_soundcloud_audio_container' class='media_radio_item'></div>
			<div id='media_audio_audio_container' class='media_radio_item'></div>
		</div>

		<form>
			<input type='file' accept="image/jpeg, image/png, image/gif" id='profile_image_picker' onchange='Hue.profile_image_selected(this)'>
		</form>

		<form>
			<input type='file' accept="image/jpeg, image/png, image/gif" id='background_image_input' class='nodisplay' onchange='Hue.background_image_selected(this)'>
		</form>

		<% include templates.ejs %>

	</body>

</html>