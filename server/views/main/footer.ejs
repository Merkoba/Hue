<div id='footer' class='panel'>
    <div id='footer_items'>
        <div title='User Menu'>
            <svg id='footer_user_menu' class='action pointer footer_icon'>
                <use href='#icon_user'>
            </svg>
        </div>

        <div title='Reactions'>
            <svg id='footer_reactions' class='action pointer footer_icon'>
                <use href='#icon_thumbs-up'>
            </svg>
        </div>

        <textarea id='input' size="1" rows="1" style='--expand: "InputExpand";'></textarea>

        <div id='footer_media_items'>

            <div id='footer_image_controls' class='footer_media_control'>
                <div id="footer_image_label" class='footer_media_label action pointer' title='Change the Image' data-type="image">
                    <div class='footer_text'>Image</div><svg id='footer_image_icon' class='footer_icon'><use href='#icon_image'></svg>
                </div>

                <div id='footer_image_toggler' class='pointer action' title='Show/Hide Image. Hidden means it will not be displayed or active'>
                    <svg id='footer_toggle_image_icon' class='footer_icon'><use href='#icon_toggle-on'></svg>
                </div>

                <div id='image_lock_area'>
                    <div id='footer_lock_image_icon_container' class='pointer action footer_icon' title='Lock/Unlock Image. Locked means it will stay the same even if media is changed by a user'>
                        <svg id='footer_lock_image_icon' class='footer_icon'><use href='#icon_locked'></svg>
                    </div>

                    <div id='footer_lock_image_label' class='footer_media_locked_label footer_text action pointer' title='Click To Unlock'>(Locked)</div>
                </div>
            </div>

            <div id='footer_media_rotate' class='pointer action' title="Click: Rotate | Middle Click: Swap">
                <svg id='footer_media_rotate_icon' class='footer_icon'><use href='#icon_sync'></svg>
            </div>

            <div id='footer_tv_controls' class='footer_media_control'>
                <div id="footer_tv_label" class='footer_media_label action pointer' title='Change the TV' data-type="tv">
                    <div class='footer_text'>TV</div><svg id='footer_tv_icon' class='footer_icon'><use href='#icon_tv'></svg>
                </div>

                <div id='footer_tv_toggler' class='pointer action' title="Show/Hide TV. Hidden means it will not be displayed or active">
                    <svg id='footer_toggle_tv_icon' class='footer_icon'><use href='#icon_toggle-on'></svg>
                </div>

                <div id='tv_lock_area'>
                    <div id='footer_lock_tv_icon_container' class='pointer action' title="Lock/Unlock TV. Locked means it will stay the same even if media is changed by a user">
                        <svg id='footer_lock_tv_icon' class='footer_icon'><use href='#icon_locked'></svg>
                    </div>

                    <div id='footer_lock_tv_label' class='footer_media_locked_label footer_text action pointer' title='Click To Unlock'>(Locked)</div>
                </div>
            </div>

            <div title='Media Menu'>
                <svg id='footer_media_menu' class='action pointer'>
                    <use href='#icon_bars'>
                </svg>
            </div>
        </div>
    </div>
</div>