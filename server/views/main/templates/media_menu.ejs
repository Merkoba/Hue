<script id='template_media_menu' type='text/x-handlebars-template' class='template'>
    <div id='media_menu_container' class='flex_column_center generic_vertical_separator'>
        <div id='media_menu_loaded_media' class='generic_vertical_separator flex_column_center'>
            <div class='full_width'>
                <svg id='media_menu_image_icon' class='other_icon action pointer'><use href='#icon_image'></svg>
                <div id='media_menu_loaded_image' class='media_menu_loaded_media_container chat_area_clone_center'></div>
            </div>

            <div class='full_width'>
                <svg id='media_menu_tv_icon' class='other_icon action pointer'><use href='#icon_tv'></use></svg>
                <div id='media_menu_loaded_tv' class='media_menu_loaded_media_container chat_area_clone_center'></div>
            </div>
        </div>

        <div class='full_width'>
            <div id='media_menu_tv_volume_title' class='setting_title'>TV Volume</div>
            <div class='slider_container'>
                <div id='media_menu_decrease_tv_volume' class='slider_icon_left pointer action'>
                    <svg class='other_icon'><use href='#icon_minus'></use></svg>
                </div>
                <input type='range' id='media_menu_tv_volume' type="range" min="0" max="1" step="0.1">
                <div id='media_menu_increase_tv_volume' class='slider_icon_right pointer action'>
                    <svg class='other_icon'><use href='#icon_plus'></use></svg>
                </div>
            </div>
        </div>

        <div class='full_width'>
            <div id='media_menu_swap' class='action pointer flex_column_center'>
                <div class='setting_title'>Swap</div>
                <svg class='other_icon'><use href='#icon_adjust'></svg>
            </div>
        </div>

        <div class='full_width'>
            <div id='media_menu_rotate' class='action pointer flex_column_center'>
                <div class='setting_title'>Rotate</div>
                <svg class='other_icon'><use href='#icon_sync'></svg>
            </div>
        </div>

        <div class='full_width'>
            <div class='setting_title'>TV Size</div>
            <select class='modal_select' id='media_menu_tv_size'>
                <option value='10'>10%</option>
                <option value='20'>20%</option>
                <option value='30'>30%</option>
                <option value='40'>40%</option>
                <option value='50'>50%</option>
                <option value='60'>60%</option>
                <option value='70'>70%</option>
                <option value='80'>80%</option>
                <option value='90'>90%</option>
            </select>
        </div>

        <div class='full_width'>
            <div class='setting_title'>Chat Size</div>
            <select class='modal_select' id='media_menu_chat_size'>
                <option value='10'>10%</option>
                <option value='20'>20%</option>
                <option value='30'>30%</option>
                <option value='40'>40%</option>
                <option value='50'>50%</option>
                <option value='60'>60%</option>
                <option value='70'>70%</option>
                <option value='80'>80%</option>
                <option value='90'>90%</option>
            </select>
        </div>
    </div>
</script>