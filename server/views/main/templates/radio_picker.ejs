<script id='template_radio_picker' type='text/x-handlebars-template' class='template'>
    <i class='fa fa-volume-up media_picker_icon'></i>
    <div class='media_picker_info'>
        Enter a YouTube search term or URL<br>Or an audio file/stream URL<br>
        <div title='Use this in the main chat input'>Command: /radio x</div>
    </div>
    <div class='flex_column_center'>
        <input type='search' id='radio_source_picker_input' class='input1 media_picker_input' placeholder='Search Term or URL'>
        <input type='search' id='radio_source_picker_input_comment' class='input1 media_picker_input' placeholder='Comment'>
    </div>
    <div class='unselectable flex_row_center' id='radio_picker_options'>
        <div class='menu_item action inline unselectable' onclick='Hue.needs_confirm("radio_prev", "This will change the radio for everyone. Are you sure?")'>Previous</div>
        <div class='menu_item action inline unselectable' onclick='Hue.needs_confirm("restart_radio", "This will restart the radio for everyone. Are you sure?")'>Restart</div>
        <div id='radio_picker_submit' class='menu_item action inline unselectable' onclick='Hue.radio_picker_submit()'>Submit</div>
    </div>
    <div class='media_picker_hist unselectable'>History</div>
    <input type="search" id="radio_history_filter" data-mode='manual' class="filter_input" placeholder="Filter">
    <div id='radio_history_container' class='media_history_container chat_area chat_area_clone chat_area_clone_center'></div>
</script>