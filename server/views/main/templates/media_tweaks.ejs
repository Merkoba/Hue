<script id="template_media_tweaks" type="text/x-handlebars-template" class="template">
  <div id="media_tweaks" class="flex_column_center">
    <div id="media_tweaks_top" class="full_width">
      <div class="flex_row_center generic_horizontal_separator">
        <div id="media_tweaks_swap" class="action bigger">Swap</div>
        <div id="media_tweaks_rotate" class="action bigger">Rotate</div>
        <div id="media_tweaks_revolve" class="action bigger">Revolve</div>
      </div>
    </div>

    <div id="auto_tweaks_container" class="flex_row_center rem1_gap" title="Whether to perform tweaks automatically in some cases"">
      <div title="Whether to perform tweaks automatically in some cases">Auto</div>
      <input type="checkbox" id="auto_tweaks_checkbox">
    </div>

    <div class="full_width flex_column_center rem2_gap">
      <div>
        <div class="setting_title">TV Size / Image Size</div>
        <div class="flex_row_center">
          <svg id="media_tweaks_tv_size_minus" class="panel_icon action"><use href="#icon_minus"></svg>
          <select class="modal_select" id="media_tweaks_tv_size">
            {{{percentages_tv}}}
          </select>
          <svg id="media_tweaks_tv_size_plus" class="panel_icon action"><use href="#icon_plus"></svg>
        </div>
      </div>

      <div>
        <div class="setting_title">Chat Size / Media Size</div>
        <div class="flex_row_center">
          <svg id="media_tweaks_chat_size_minus" class="panel_icon action"><use href="#icon_minus"></svg>
          <select class="modal_select" id="media_tweaks_chat_size">
            {{{percentages_chat}}}
          </select>
          <svg id="media_tweaks_chat_size_plus" class="panel_icon action"><use href="#icon_plus"></svg>
        </div>
      </div>

      <div>
        <div class="setting_title">Chat Font Size</div>
        <div class="flex_row_center">
          <svg id="media_tweaks_chat_font_size_minus" class="panel_icon action"><use href="#icon_minus"></svg>
          <select class="modal_select" id="media_tweaks_chat_font_size">
            {{{chat_font_sizes}}}
          </select>
          <svg id="media_tweaks_chat_font_size_plus" class="panel_icon action"><use href="#icon_plus"></svg>
        </div>
      </div>
    </div>

    <div id="media_tweaks_bottom" class="flex_column_center rem1_gap">
    <div id="media_tweaks_toggle_info" class="action bigger">Toggle Info</div>
    <div id="media_tweaks_toggle_chat" class="action bigger">Toggle Chat</div>
    <div id="media_tweaks_defaults" class="action bigger">Apply Defaults</div>
  </div>
</script>