      <div class="flex_row_center generic_horizontal_separator">
        <div id="media_tweaks_swap" class="action bigger">Swap</div>
        <div id="media_tweaks_rotate" class="action bigger">Rotate</div>
        <div id="media_tweaks_revolve" class="action bigger">Revolve</div>
      </div>
    </div>

    <div class="full_width">
      <div class="setting_title">TV Size / Image Size</div>
      <select class="modal_select" id="media_tweaks_tv_size">
