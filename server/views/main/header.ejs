<div id='header' class='panel'>
    <div id='header_left' class='header_side'>
        <div id='header_room_menu' title='Room Menu' class='header_container'>
            <svg class='action pointer header_icon'>
                <use href='#icon_cube'>
            </svg>
        </div>
        
        <div id='header_users' class='action pointer flex_row_center header_container' title='Users Online'>
            <svg class='header_icon'>
                <use href='#icon_robot'>
            </svg>

            <div id='header_users_count' class='header_label'></div>
        </div>

        <div id='header_message_board' class='action pointer flex_row_center header_container' title='Message Board'>
            <svg class='header_icon'>
                <use href='#icon_comment'>
            </svg>

            <div id='header_message_board_count' class='header_label'>(0)</div>
        </div>
    </div>

    <div id='activity_bar'>
        <div id='activity_bar_inner' class='grid_row_center'>
            <div id='activity_bar_no_activity'>No Recent Activity</div>
        </div>
    </div>

    <div id='header_right' class='header_side'>
        <div id='header_notifications' title='Notifications' class='header_container'>
            <svg class='action pointer header_icon'>
                <use href='#icon_bell'>
            </svg>
        </div>

        <div id='header_whispers' title='Whispers' class='flex_row_center action pointer header_container'>
            <svg class='header_icon'>
                <use href='#icon_envelope'>
            </svg>
            
            <div id='header_whispers_count' class='header_label'>(0)</div>
        </div>

        <div id='header_lock_screen' title='Lock Screen' class='header_container'>
            <svg class='action pointer header_icon'>
                <use href='#icon_locked'>
            </svg>
        </div>
    </div>
</div>