<div class="panel">
  <div id="header" class="panel_container grow">
    <div id="header_left" class="header_side">
      <div id="header_main_menu" title="Main Menu" class="action header_container">
        <svg class="panel_icon">
          <use xlink:href="#icon_cube"></use>
        </svg>
      </div>

      <div id="header_users" class="action flex_row_center header_container" title="Users Online">
        <svg class="panel_icon">
          <use xlink:href="#icon_robot"></use>
        </svg>

        <div id="header_users_count" class="header_label"></div>
      </div>

      <div id="header_message_board" class="action flex_row_center header_container" title="Message Board">
        <svg class="panel_icon">
          <use xlink:href="#icon_comment"></use>
        </svg>

        <div id="header_message_board_count" class="header_label">(0)</div>
      </div>
    </div>

    <div id="activity_bar">
      <div id="activity_bar_inner" class="flex_row_center"></div>
    </div>

    <div id="header_right" class="header_side">
      <div id="header_whispers" title="Whispers" class="flex_row_center action header_container">
        <svg class="panel_icon">
          <use xlink:href="#icon_envelope"></use>
        </svg>

        <div id="header_whispers_count" class="header_label">(0)</div>
      </div>

      <div id="header_notifications" title="Notifications" class="flex_row_center action header_container">
        <svg class="panel_icon">
          <use xlink:href="#icon_bell"></use>
        </svg>

        <div id="header_notifications_count" class="header_label">(0)</div>
      </div>

      <div id="header_notifications_enabled" title="Enable/Disable Notifications" class="action header_container">
        <svg class="panel_icon">
          <use xlink:href="#icon_unlocked"></use>
        </svg>
      </div>
    </div>
  </div>
</div>