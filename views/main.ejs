<html>
	<head>
		<title><%= room %></title> 
		<script src="/js/jquery.js"></script>
		<script src="/js/handlebars.js"></script>
		<script src="/js/colorlib.js"></script>
		<script src="/js/msg.min.js"></script>
		<script src="/js/dropzone.js"></script>
		<script src="/js/dateformat.js"></script>
		<script src="/js/perfect-scrollbar.min.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/perfect-scrollbar.css?v=2" />
		<script type="text/javascript" src="/js/contextmenu/jquery.contextMenu.min.js"></script>
		<script src="/js/contextmenu/jquery.ui.position.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>

		<script src="/js/base.js?ver=457"></script>
		<link rel="stylesheet" type="text/css" href="/css/style.css?ver=88" />

		<link rel="stylesheet" href="/css/font-awesome/css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="/js/contextmenu/jquery.contextMenu.min.css"> 

		<script>
			$(function()
			{
				room = "<%= room %>"
				site_root = "<%= site_root %>"
				main_room = "<%= main_room %>"
				default_image_url = "<%= default_image_url %>"
				default_radiosrc = "<%= default_radiosrc %>"
				default_radioinfo = "<%= default_radioinfo %>"
				topic_separator = "<%= topic_separator %>"
				title_topic_separator = "<%= title_topic_separator %>"
				default_topic = "<%= default_topic %>"
				default_topic_claimed = "<%= default_topic_claimed %>"
				check_metadata_interval_duration = <%= check_metadata_interval_duration %>
				chat_crop_limit = <%= chat_crop_limit %>
				max_input_length = <%= max_input_length %>
				max_topic_length = <%= max_topic_length %>
				max_title_topic_length = <%= max_title_topic_length %>
				max_roomname_length = <%= max_roomname_length %>
				max_username_length = <%= max_username_length %>
				max_radiosrc_length = <%= max_radiosrc_length %>
				max_input_history_items = <%= max_input_history_items %>
				max_image_size = <%= max_image_size %>
				afk_timeout_duration = <%= afk_timeout_duration %>
				heartbeat_interval = <%= heartbeat_interval %>

				init()
			})
		</script>
	</head>
	<body>

		<audio id='audio' autoplay> </audio>

		<div id='background_image'></div>

		<div id='header'>
			<i id='main_menu' class='header_item unselectable icon fa fa-th-large' onclick='show_menu()'></i>
			<span class='header_item'>&nbsp;|&nbsp;</span>
			<span class='unselectable header_item' id='usercount' onclick='show_userlist()'></span>
			<span class='header_item'>&nbsp;|&nbsp;</span>
			<span class='unselectable header_item anime' id='toggle_radio' onclick='toggle_radio()'>
				<i class='icon fa fa-volume-up' id='playing_icon'></i>
				<span id='toggle_radio_text'>Start Radio</span>
			</span> 
			<span class='unselectable' id='volume_area'>
				<span class='header_item'>&nbsp;|&nbsp;
				<i class='header_item unselectable icon fa fa-minus' onclick='volume_decrease()'></i>
				<span onclick='volume_decrease()'>Volume:</span></span>
				<span class='header_item' id='volume' onclick='volume_increase()'>100%</span>
				<i class='header_item unselectable icon fa fa-plus' onclick='volume_increase()'></i>
			</span>
			<span id="now_playing_area" onclick="show_played()">
				<span class='header_item'>&nbsp;|&nbsp; Now Playing:</span>
				<span class='header_item' id='now_playing'></span>
			</span>
		</div>

		<div id='chat_main'>

			<div id='chat_area_parent'>
				<div id='chat_area'></div>
			</div>

			<div id='scroll_notice' onclick='goto_bottom(true)'>Go To Bottom</div>

			<div id='input_container'>
				<input id='input' type='text'>
			</div>

		</div>

		<div id='media' class='unselectable' draggable='false'>
			<img id='media_image' draggable='false'>
		</div>

		<img id='test_image'>

		<div id='overlay' onclick='hide_boxes()'></div>

		<script id='template_menu' type='text/x-handlebars-template'>
			<div id='menu'>

				<div class='menu_item' onclick="request_roomlist()">Public Rooms</div>
				<div class='menu_item' onclick='show_create_room()'>Go To Room</div>
				<div class='menu_item' onclick='show_settings()'>Settings</div>

				<div id='menu_smaller_container'>

					<div class='menu_item_smaller' onclick='copy_room_url()'>Copy Room URL</div>

					<br>

					<span class='menu_item_smaller' onclick='clear_chat();hide_boxes()'>Clear</span>

					&nbsp;|&nbsp;

					<span class='menu_item_smaller' onclick='show_status();hide_boxes()'>Status</span>

					&nbsp;|&nbsp;

					<span class='menu_item_smaller' onclick='help();hide_boxes()'>Help</span>

				</div>

			</div>
		</script>

		<script id='template_create_room' type='text/x-handlebars-template'>
			<div id='create_room'>

				<br>

				<input id='create_room_input' placeholder="Name" type="text">

				<br><br> Or <br>

				<div class='menu_item' onclick='random_room()'>Random Name</div><br>

			</div>
		</script>

		<script id='template_settings' type='text/x-handlebars-template'>
			<div id='create_settings'>
				<br>

				<div class="setting_title">Background Image</div>
				<input class="setting_checkbox" id="setting_background_image" type="checkbox">

				<br><br><br>

				<div class="setting_title">Header Contrast</div>
				<input class="setting_checkbox" id="setting_header_contrast" type="checkbox">

				<br><br><br>

				<div class="setting_title">Input Contrast</div>
				<input class="setting_checkbox" id="setting_input_contrast" type="checkbox">
			</div>
		</script>

		<script id='template_userlist' type='text/x-handlebars-template'>
			<div id='userlist'></div>
		</script>		
		
		<script id='template_roomlist' type='text/x-handlebars-template'>
			<div id='roomlist'></div>
		</script>		
		
		<script id='template_played' type='text/x-handlebars-template'>
			<div id='played'><br></div>
		</script>		

		<audio id='pup' src='/audio/pup.ogg'></audio>

	</body>
</html>