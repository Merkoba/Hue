{
  "ignorePatterns": ["*bundle*.js", "**/assets/js/libs/*"],
  "rules": {
    "no-undef": 2,
    "no-unreachable": 2,
    "spaced-comment": 2,
    "array-bracket-spacing": 2,
    "arrow-spacing": 2,
    "block-spacing": 2,
    "brace-style": 2,
    "comma-style": 2,
    "computed-property-spacing": 2,
    "eol-last": [2, "never"],
    "func-call-spacing": 2,
    "key-spacing": 2,
    "keyword-spacing": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-spaces": 2,
    "no-whitespace-before-property": 2,
    "quotes": 2,
    "semi": [2, "never"],
    "space-before-blocks": 2,
    "space-before-function-paren": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true   
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "globals": {
    "Hue": "readonly",
    "Msg": "readonly",
    "Utilz": "readonly",
    "Croppie": "readonly",
    "Handlebars": "readonly",
    "jdenticon": "readonly",
    "Dropzone": "readonly",
    "io": "readonly",
    "Twitch": "readonly",
    "SC": "readonly",
    "YT": "readonly",
    "onYouTubeIframeAPIReady": "readonly",
    "ColorLib": "readonly",
    "ctxmenu": "readonly",
    "dateFormat": "readonly"
  }
}